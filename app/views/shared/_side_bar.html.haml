.chat-side
  .side-header
    .side-header__box
      %p.side-header__box__user-name
        = current_user.name
      %ul.side-header__box__icon
        %li.side-header__box__pencil
          = link_to new_group_path do
            = icon('fas', 'pen-square')
        %li.side-header__box__setting
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog', class: 'icon')
  .group-list
    - current_user.groups.each do |group|
      .group
        = link_to '#' do
          %p.group__group-name
            = group.name
          %p.group__message
            まだメッセージがありません
            
            